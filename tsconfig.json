{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "strictNullChecks": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": ["node_modules", "build"]
}